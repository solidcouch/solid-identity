{
  "compilerOptions": {
    "target": "es6",
    "lib": ["esnext"],
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "rootDir": "."
  },
  "include": ["./src"],
  "exclude": ["./src/tests"]
}
